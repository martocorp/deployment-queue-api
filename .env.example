# Snowflake
SNOWFLAKE_ACCOUNT=xy12345.eu-west-1
SNOWFLAKE_USER=deployment_api_user
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase_if_key_is_encrypted
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=DEPLOYMENTS_DB
SNOWFLAKE_SCHEMA=PUBLIC

# Authentication
AUTH_ENABLED=true
GITHUB_OIDC_ISSUER=https://token.actions.githubusercontent.com
GITHUB_OIDC_AUDIENCE=deployment-queue-api

# GitHub API (for CLI auth)
GITHUB_API_URL=https://api.github.com
GITHUB_API_VERSION=2022-11-28

# Optional: Restrict to specific orgs (comma-separated)
ALLOWED_ORGANISATIONS=

# Cache TTLs (seconds)
JWKS_CACHE_TTL=3600
ORG_MEMBERSHIP_CACHE_TTL=300

# For local dev with auth disabled
# AUTH_ENABLED=false
DEV_ORGANISATION=local-dev
